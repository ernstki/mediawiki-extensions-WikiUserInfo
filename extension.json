{
  "name": "WikiUserInfo",
  "type": "parserhook",
  "description": "Allows to get info and options of user specified by name",
  "author":
      [
        "Michael P. Dubner",
        "Kevin Ernst"
      ],
  "version": "1.0.0",
  "license-name": "CC-BY-SA-4.0",
  "url": "https://www.mediawiki.org/wiki/Extension:WikiUserInfo",
  "requires": {
    "MediaWiki": ">= 1.35.0"
  },

  "AutoloadNamespaces": {
    "MediaWiki\\Extension\\WikiUserInfo\\": "src/"
  },

  "ExtensionMessagesFiles": {
    "WikiUserInfoMagic": "WikiUserInfo.i18n.magic.php"
  },

  "Hooks": {
    "ParserFirstCallInit": "\\MediaWiki\\Extension\\WikiUserInfo\\Hooks::onParserFirstCallInit"
  },

  "AvailableRights": [
    "showuseroption",
    "showuseremail"
  ],

  "GroupPermissions": {
    "*": {
      "showuseroption": false,
      "showuseremail": true
    },
    "sysop": {
      "showuseroption": true,
      "showuseremail": true
    },
    "bureaucrat": {
      "showuseroption": true,
      "showuseremail": true
    }
  },

  "manifest_version": 2
}
